// many things copied from https://github.com/Axenide/Dotfiles/blob/main/dots/.config/waybar/config.jsonc
{
    "reload_style_on_change": true,
    "layer": "top",
    "position": "top", // Waybar position (top|bottom|left|right)

    // TODO: SOMEHOW MAKE THE HEIGHT EVEN SMALLER
    "height": 12, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 4, // Gaps between modules (4px)

    // Choose the order of the modules
    "margin-top": 7,
    "margin-left": 12,
    "margin-right": 12,
    "margin-bottom": 0,
    "modules-left": [ 
        "hyprland/workspaces",
        "group/sounds"
    ],
    "modules-center": [
        "clock",
        "custom/uptime"
    ],
    "modules-right": [
        "group/tools",
        "custom/updates",
        "group/hardware",
        "group/battery-stats",
        "privacy",
        "custom/notification",
        "tray"
    ],
    "group/battery-stats": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 500,
            "children-class": "some-tools",
            "transition-left-to-right": false
        },
        "modules": [
            "battery",
            "battery#bat0",
            "battery#bat1",
            "custom/battery-threshold"
        ]
    },
    "group/sounds": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 500,
            "children-class": "some-tools",
            "transition-left-to-right": true
        },
        "modules": [
            "pulseaudio",
            "custom/playerctl"
        ]
    },
    "group/tools": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 500,
            "children-class": "some-tools",
            "transition-left-to-right": false
        },
        "modules": [
            "custom/drawer-sign",
            "custom/nightmode",
            "custom/wallpaper-picker",
            "custom/hyprpicker"
        ]
    },
    "custom/drawer-sign": {
        "format": " &lt; ", // <
        "tooltip": false
    },
    "group/hardware": {
        "orientation": "horizontal",
        "modules": [
            "custom/space",
            "cpu",
            "memory",
            "custom/space",
            "temperature",
            "custom/space"
        ]
    },
    "hyprland/window": {
        "separate-outputs": true
    },
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "1": " 一 ",
            "2": " 二 ",
            "3": " 三 ",
            "4": " 四 ",
            "5": " 五 ",
            "6": " 六 ",
            "7": " 七 ",
            "8": " 八 ",
            "9": " 九 ",
            "10": " 十 ",
            "11": " 十一 ", // second screen
            "12": " 十二 ", // second screen
            "13": " 十三 ", // second screen
            "14": " 十四 ", // second screen
            "15": " 十五 ", // second screen
            "16": " 十六 ", // second screen
            "17": " 十七 ", // second screen
            "18": " 十八 ", // second screen
            "19": " 十九 ", // second screen
            "urgent": "",
            // "active": "",
            // "default": "󰧞",
            "terminals": "   ",
            "obsidian": "   ",
            "filemanager": "   "
        },
        "all-outputs": false,
        "show-special": true,
        "on-scroll-up": "hyprctl dispatch workspace e+1",
        "on-scroll-down": "hyprctl dispatch workspace e-1",
        "on-click": "activate",
        "on-click-middle": "close",
        "on-click-right": "fullscreen"
        // "persistent-workspaces": {
        //     "*": 10
        // }
        // "window-rewrite-default": "",
        // "window-rewrite": {
        //     "title<.*youtube.*>": "", // Windows whose titles contain "youtube"
        //     "class<firefox>": "", // Windows whose classes are "firefox"
        //     "class<firefox> title<.*github.*>": "", // Windows whose class is "firefox" and title contains "github". Note that "class" always comes first.
        //     "foot": "", // Windows that contain "foot" in either class or title. For optimization reasons, it will only match against a title if at least one other window explicitly matches against a title.
        //     "code": "󰨞",
        // },
    },
    "custom/uptime": {
        "format": "UP: {0} days",
        "exec": "awk '{print int($1/86400)}' /proc/uptime",
        "tooltip": false
    },
    "custom/space": {
        "format": " ",
        "tooltip": false
    },
    "custom/playerctl": {
        "format": "{0} :: <span>{1}</span>",
        "return-type": "json",
        "max-length": 64,
        "exec": "playerctl -a metadata --format '{\"text\": \"{{artist}} - {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
        "on-click-middle": "playerctl play-pause",
        "on-click": "playerctl previous",
        "on-click-right": "playerctl next",
        "format-icons": {
            "Playing": "<span foreground='#B1B946'>󰝚</span>",
            "Paused": "<span foreground='#B1B946'>󰝛</span>"
        }
    },
    "custom/playerlabel": {
        "format": "<span>{}</span>",
        "return-type": "json",
        "max-length": 48,
        "exec": "playerctl -a metadata --format '{\"text\": \"{{artist}} - {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
        "on-click-middle": "playerctl play-pause",
        "on-click": "playerctl previous",
        "on-click-right": "playerctl next",
        "format-icons": {
            "Playing": "<span foreground='#B1B946'>󰒮 󰐌  󰒭</span>",
            "Paused": "<span foreground='#47423E'>󰒮 󰏥  󰒭</span>"
        }
    },
    // from swaync example on github
    "custom/notification": {
        "tooltip": false,
        "format": "{icon}",
        "format-icons": {
        "notification": "<span foreground='red'><sup></sup></span>",
        "none": "",
        "dnd-notification": "<span foreground='red'><sup></sup></span>",
        "dnd-none": "",
        "inhibited-notification": "<span foreground='red'><sup></sup></span>",
        "inhibited-none": "",
        "dnd-inhibited-notification": "<span foreground='red'><sup></sup></span>",
        "dnd-inhibited-none": ""
        },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
    },
    "custom/nightmode": {
        // https://www.reddit.com/r/linux/comments/1c290rv/i_made_a_script_to_control_nightlight_through/
        "format": "☀",
        "on-click": "bash ~/.config/waybar/scripts/sunONOFF", // TODO: usar hyprsunset
        "on-scroll-up": "bash ~/.config/waybar/scripts/red_dec",
        "on-scroll-down": "bash ~/.config/waybar/scripts/red_inc",
        "tooltip-format": "Toggle Night Mode."
    },
    "custom/wallpaper-picker": {
        "format": "   ",
        "on-click": "bash $XDG_CONFIG_HOME/waybar/scripts/change-wallpaper.sh",
        "on-click-right": "bash $XDG_CONFIG_HOME/waybar/scripts/random-wallpaper.sh",
        "tooltip-format": "Choose wallpaper."
    },
    "custom/hyprpicker": {
        "format": " 󰈋 ",
        "on-click": "bash $XDG_CONFIG_HOME/waybar/scripts/hyprpicker-hex.sh",
        "on-click-right": "bash $XDG_CONFIG_HOME/waybar/scripts/hyprpicker-rgb.sh",
        "tooltip-format": "Pick a color."
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },
    "custom/updates": {
       "format": " {} {icon}",
       "return-type": "json",
       "format-icons": {
           "has-updates": "󱍷 ",
           "updated": "󰂪 "
       },
       "exec-if": "which waybar-module-pacman-updates",
       // waybar-module-pacman-updates is installed through yay
       "exec": "waybar-module-pacman-updates --interval-seconds 5 --network-interval-seconds 300"
    },
    "clock": {
        "timezone": "America/Sao_Paulo",
        "format": " {:%d-%m-%Y  %H:%M}",
        "tooltip-format": "<tt>{calendar}</tt>",
        "calendar": {
            "mode"          : "year",
            "mode-mon-col"  : 3,
            "weeks-pos"     : "right",
            "on-scroll"     : 1,
            "format": {
                "months":     "<span color='#ffead3'><b>{}</b></span>",
                "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-click-forward": "tz_up",
            "on-click-backward": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
    "battery#bat0": {
        "bat": "BAT0",
        "format": "B0 {capacity}% {icon}",
        "format-icons": [" ", " ", " ", " ", " "]
    },
    "battery#bat1": {
        "bat": "BAT1",
        "format": "B1 {capacity}% {icon}",
        "format-icons": [" ", " ", " ", " ", " "]
    },
    "battery": {
        "states": {
            "full": 100,
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "tooltip-format": "{timeTo}\nPower: -{power}W",
        "tooltip-format-charging": "{timeTo}\nPower: +{power}W", // arrumar alguma maneira de mostra o Mode e o Threshold
        "tooltip-format-full": "{timeTo}\nThreshold: ",
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% ",
        "format-plugged": "{capacity}% ",
        "format-alt": "{time} {icon}",
        "format-critical": "{capacity}%  ",
        "format-icons": [" ", " ", " ", " ", " "],
        "on-click-right": "bash power-mode $(echo 'ac;battery;battery-discord' | rofi -sep ';' -dmenu -p 'Choose battery mode:')"
    },
    "custom/battery-mode": { // TODO use this
        "format": "M: {0}",
        "exec": "cat /tmp/power-mode",
        "tooltip": false
    },
    "custom/battery-threshold": {
        "format": "L: {0}%",
        "exec": "battery-threshold get | awk '{print $2}'",
        "signal": 1,
        "on-click": "battery-threshold $(echo 'custom;normal' | rofi -sep ';' -dmenu -p 'Choose to toggle battery threshold ON or OFF:') && /bin/kill -s SIGRTMIN+1 waybar",
        "tooltip": false
    },
    "cpu": {
        "format": "{usage}%  ",
        "tooltip": true
    },
    "memory": {
        "format": "{}% "
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 85,
        "format-critical": "{temperatureC}°C !",
        "format": "{temperatureC}°C ",
        "format-icons": [] // [" ", "", " "]
    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": " ",
        "performance": " ",
        "balanced": " ",
        "power-saver": ""
      }
    },
    "pulseaudio": {
        "format": " {icon} {format_source} ",
        "format-bluetooth": " {icon} {format_source} ",
        "format-bluetooth-muted": "   {format_source} ",
        "format-muted": "   {format_source} ",
        "format-source": "",
        "on-scroll-up": "volume up",
        "on-scroll-down": "volume down",
        "format-source-muted": " ",
        "format-icons": {
            "headphone": " ",
            "hands-free": "",
            "headset": " ",
            "phone": " ",
            "portable": " ",
            "car": " ",
            "default": ["", " ", "  "]
        },
        "on-click": "volume mute",
        "on-click-middle": "pavucontrol",
        "on-click-right": "microphone mute-toggle",
        "tooltip-format": "Volume: {volume}%\n{desc}\nLMC MUTE | RMC MIC MUTE | MMC PAVUCONTROL"
    },
    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": " ",
            "default": "🎜 "
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },
    "mpd": {
        "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ⸨{songPosition}|{queueLength}⸩ {volume}%  ",
        "format-disconnected": "Disconnected  ",
        "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped  ",
        "unknown-tag": "N/A",
        "interval": 5,
        "consume-icons": {
            "on": " "
        },
        "random-icons": {
            "off": "<span color=\"#f53c3c\"> </span> ",
            "on": " "
        },
        "repeat-icons": {
            "on": " "
        },
        "single-icons": {
            "on": " 1"
        },
        "state-icons": {
            "paused": "",
            "playing": ""
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)"
    },
    "privacy": {
        "icon-spacing": 4,
        "icon-size": 14,
        "transition-duration": 250,
        "modules": [
            {
                "type": "screenshare",
                "tooltip": true,
                "tooltip-icon-size": 14
            },
            {
                "type": "audio-in",
                "tooltip": true,
                "tooltip-icon-size": 14
            }
        ],
        "ignore-monitor": true,
        "ignore": [
            {
                "type": "audio-in",
                "name": "cava"
            }
        ]
    }
}
