// many things copied from https://github.com/Axenide/Dotfiles/blob/main/dots/.config/waybar/config.jsonc
{
    "reload_style_on_change": true,
    "layer": "top",
    "position": "top", // Waybar position (top|bottom|left|right)

    // TODO: SOMEHOW MAKE THE HEIGHT EVEN SMALLER
    "height": 12, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "spacing": 4, // Gaps between modules (4px)

    // Choose the order of the modules
    "margin-top": 7,
    "margin-left": 12,
    "margin-right": 12,
    "margin-bottom": 0,
    "modules-left": [ 
        "hyprland/workspaces",
        "group/sounds"
    ],
    "modules-center": [
        "clock",
        "custom/uptime"
    ],
    "modules-right": [
        "group/tools",
        "custom/updates",
        "group/hardware",
        "group/battery-stats",
        "privacy",
        "custom/notification",
        "tray"
    ],
    "group/battery-stats": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 500,
            "children-class": "some-tools",
            "transition-left-to-right": false
        },
        "modules": [
            "battery",
            "battery#bat0",
            "battery#bat1",
            "custom/battery-threshold"
        ]
    },
    "group/sounds": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 500,
            "children-class": "some-tools",
            "transition-left-to-right": true
