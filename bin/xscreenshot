#!/bin/sh

if [ -z $2 ]; then
    SAVE_DIR="$HOME/Pictures/Screenshots"
else
    SAVE_DIR=$2
fi

IMGPATH=$(date "+$SAVE_DIR/%m-%d-%Y-$RANDOM.png")

# TODO: implementar sistema de opções com dash (talvez um -hypr?)
case $1 in
    full)
        grimblast copysave screen $IMGPATH
        # grim  $IMGPATH && wl-copy < $IMGPATH
        ;;
    select)
        grim -g "$(slurp)" $IMGPATH && wl-copy < $IMGPATH
        # grimblast --freeze copy area $IMGPATH
        # //&& play $HOME/.config/hypr/assets/sounds/camera-shutter.ogg
        ;;
    edit)
        # grim -g "$(slurp)" $IMGPATH && wl-copy < $IMGPATH
        grimblast --freeze edit area $IMGPATH
        # //&& play $HOME/.config/hypr/assets/sounds/camera-shutter.ogg
        ;;
    *)
        echo "Usage: xscreenshot [full|select|edit] [save_directory]"
        exit 1
        ;;
esac

if [ -f $IMGPATH ]; then
    notify-send "Image saved at $SAVE_DIR" "Click to open" -c screenshot -i "$IMGPATH" --action="open=Open image" --expire-time=10000

    # Play sound (optional)
    canberra-gtk-play -i camera-shutter -d "screenshotTaken"

    # Action to open the image is on the swaync config
else
    notify-send "Screenshot failed"
fi

